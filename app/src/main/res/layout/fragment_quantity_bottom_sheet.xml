<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dash_back">

    <TextView
        android:id="@+id/tv_quantity_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entered Quantity: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_bottom_sheet_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please confirm the quantity entered."
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_drawable"
        android:text="Confirm" />
</LinearLayout>
