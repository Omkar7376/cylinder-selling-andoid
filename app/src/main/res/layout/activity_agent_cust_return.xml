<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dash_back"
    tools:context=".agentdistributionmanagement.AgentCustReturnActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_return_cylinder"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/base_color"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Return Cylinder"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <EditText
        android:id="@+id/search_customer_return"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingStart="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary_text_color"
        android:hint="Search Customer Name"
        android:textColorHint="@color/gray"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_return_cylinder" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_customer_return_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_customer_return">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_customer_return_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Date and Time : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/textview_customer_return_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="19 Jan 2025 05:30:31"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/label_customer_return_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Customer Name : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_customer_return_date_time"/>

            <TextView
                android:id="@+id/textview_customer_return_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malasidha"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label_customer_return_customer_name" />

            <TextView
                android:id="@+id/label_customer_return_customer_mob_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Customer Number : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_customer_return_customer_name"/>

            <TextView
                android:id="@+id/textview_agent_return_agent_mobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9876543210"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label_customer_return_customer_mob_no" />

            <TextView
                android:id="@+id/label_customer_return_customer_commercial_cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No. Of Commercial Cylinders : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_customer_return_customer_mob_no"/>

            <TextView
                android:id="@+id/textview_customer_return_customer_commercial_cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/label_customer_return_customer_commercial_cylinder"
                app:layout_constraintTop_toTopOf="@+id/label_customer_return_customer_commercial_cylinder" />

            <EditText
                android:id="@+id/editext_no_of_commercial_cylinders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:hint="Enter Commercial Return Quantity"
                android:paddingVertical="12dp"
                android:paddingStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_customer_return_customer_commercial_cylinder" />

            <TextView
                android:id="@+id/label_customer_return_customer_domestic_cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No. Of Domestic Cylinders : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editext_no_of_commercial_cylinders" />

            <TextView
                android:id="@+id/textview_customer_return_customer_domestic_cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/label_customer_return_customer_domestic_cylinder"
                app:layout_constraintTop_toTopOf="@+id/label_customer_return_customer_domestic_cylinder" />

            <EditText
                android:id="@+id/edittext_customer_return_domestic_cylinder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Enter Domestic Return Quantity"
                android:paddingVertical="12dp"
                android:paddingStart="8dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_customer_return_customer_domestic_cylinder" />

            <TextView
                android:id="@+id/label_customer_return_customer_mini_cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No. Of Mini Cylinders : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edittext_customer_return_domestic_cylinder" />

            <TextView
                android:id="@+id/textview_agent_return_agent_mini_cylinder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/label_customer_return_customer_mini_cylinder"
                app:layout_constraintTop_toTopOf="@+id/label_customer_return_customer_mini_cylinder" />

            <EditText
                android:id="@+id/edittext_agent_return_mini_cylinder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Enter Mini Return Quantity"
                android:paddingVertical="12dp"
                android:paddingStart="8dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_customer_return_customer_mini_cylinder" />

            <TextView
                android:id="@+id/label_customer_return_customer_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Amount : "
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edittext_agent_return_mini_cylinder" />

            <TextView
                android:id="@+id/textview_agent_return_agent_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/primary_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/label_customer_return_customer_amount"
                app:layout_constraintTop_toTopOf="@+id/label_customer_return_customer_amount" />

            <EditText
                android:id="@+id/edittext_agent_return_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Enter Amount"
                android:paddingVertical="12dp"
                android:paddingStart="8dp"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_customer_return_customer_amount" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_customer_return_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16sp"
        android:text="Submit"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_drawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>