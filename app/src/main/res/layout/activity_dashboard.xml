<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dash_back"
    android:visibility="visible"
    tools:context=".dashboard.DashboardActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_dashboard_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:background="@drawable/shape_dashboard_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_dashboard_account"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/baseline_account_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_dashboard_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:text="Rushikesh Koli"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/icon_dashboard_account"
            app:layout_constraintTop_toTopOf="@+id/icon_dashboard_account" />

        <TextView
            android:id="@+id/textview_dashboard_user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textview_dashboard_user_name"
            app:layout_constraintTop_toBottomOf="@+id/textview_dashboard_user_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_dashboard_admin"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/container_dashboard_top">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/container_dashboard_cylinder_stats"
            tools:layout_editor_absoluteX="0dp">

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_dashboard_cylinder_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/shape_editext_border"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_dashboard_cylinder_stock_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Store Summary"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_dashboard_cylinder_stock_in_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="32dp"
                android:text="InStore"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/label_dashboard_cylinder_stock_stat"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_cylinder_stock_stat" />

            <TextView
                android:id="@+id/label_dashboard_cylinder_stock_distributed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distributed"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/label_dashboard_cylinder_stock_stat"
                app:layout_constraintTop_toTopOf="@+id/label_dashboard_cylinder_stock_in_store" />

            <TextView
                android:id="@+id/textView_dashboard_instore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="@+id/label_dashboard_cylinder_stock_in_store"
                app:layout_constraintStart_toStartOf="@+id/label_dashboard_cylinder_stock_in_store"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_cylinder_stock_in_store" />

            <TextView
                android:id="@+id/textView_dashboard_distributed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="@+id/label_dashboard_cylinder_stock_distributed"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="@+id/label_dashboard_cylinder_stock_distributed"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_cylinder_stock_distributed" />

            <TextView
                android:id="@+id/textView_dashboard_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09 Jan 2025"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="@+id/label_dashboard_cylinder_stock_stat"
                app:layout_constraintStart_toStartOf="@+id/label_dashboard_cylinder_stock_stat"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_cylinder_stock_stat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_dashboard_stock_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_back"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_dashboard_cylinder_stats"
            app:strokeColor="@color/card_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_card_dashboard_stock_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/label_card_dashboard_stock_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Management"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_stock_management_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toStartOf="@+id/image_card_dashboard_stock_management_return"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_card_dashboard_stock_management" />

                <TextView
                    android:id="@+id/label_dashboard_add_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Add Stock"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_dashboard_stock_management_add"
                    app:layout_constraintStart_toStartOf="@+id/image_card_dashboard_stock_management_add"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_dashboard_stock_management_add" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_stock_management_return"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toStartOf="@+id/image_card_dashboard_stock_management_summary"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/image_card_dashboard_stock_management_add"
                    app:layout_constraintTop_toTopOf="@+id/image_card_dashboard_stock_management_add" />

                <TextView
                    android:id="@+id/label_dashboard_return_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Return Stock"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_dashboard_stock_management_return"
                    app:layout_constraintStart_toStartOf="@+id/image_card_dashboard_stock_management_return"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_dashboard_stock_management_return" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_stock_management_summary"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/image_card_dashboard_stock_management_return"
                    app:layout_constraintTop_toTopOf="@+id/image_card_dashboard_stock_management_return" />

                <TextView
                    android:id="@+id/label_dashboard_show_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Show Summary"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_dashboard_stock_management_summary"
                    app:layout_constraintStart_toStartOf="@+id/image_card_dashboard_stock_management_summary"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_dashboard_stock_management_summary" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_dashboard_distribution_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_back"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_dashboard_stock_management"
            app:strokeColor="@color/card_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_card_dashboard_distribution_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/label_card_dashboard_distribution_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distribution Management"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_distribution_management_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toStartOf="@+id/image_card_dashboard_distribution_management_return"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_card_dashboard_distribution_management" />

                <TextView
                    android:id="@+id/label_dashboard_add_distribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Distribute Cylinder"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_dashboard_distribution_management_add"
                    app:layout_constraintStart_toStartOf="@+id/image_card_dashboard_distribution_management_add"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_dashboard_distribution_management_add" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_distribution_management_return"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toStartOf="@+id/image_card_dashboard_distribution_management_summary"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/image_card_dashboard_distribution_management_add"
                    app:layout_constraintTop_toTopOf="@+id/image_card_dashboard_distribution_management_add" />

                <TextView
                    android:id="@+id/label_dashboard_return_distribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Return cylinder"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_dashboard_distribution_management_return"
                    app:layout_constraintStart_toStartOf="@+id/image_card_dashboard_distribution_management_return"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_dashboard_distribution_management_return" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_distribution_management_summary"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/image_card_dashboard_distribution_management_return"
                    app:layout_constraintTop_toTopOf="@+id/image_card_dashboard_distribution_management_return" />

                <TextView
                    android:id="@+id/label_dashboard_show_distribution_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Show Summary"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/image_card_dashboard_distribution_management_summary"
                    app:layout_constraintStart_toStartOf="@+id/image_card_dashboard_distribution_management_summary"
                    app:layout_constraintTop_toBottomOf="@+id/image_card_dashboard_distribution_management_summary" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_dashboard_payment_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_back"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_dashboard_distribution_management"
            app:strokeColor="@color/card_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_card_dashboard_payment_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/label_card_dashboard_payment_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Management"
                    android:textColor="@color/primary_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Add Payment Icon -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_payment_management_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toStartOf="@+id/image_card_dashboard_payment_management_return"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_card_dashboard_payment_management" />

                <!-- Add Payment Label -->
                <TextView
                    android:id="@+id/label_dashboard_add_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pending Payment"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/image_card_dashboard_payment_management_add"
                    app:layout_constraintStart_toStartOf="@id/image_card_dashboard_payment_management_add"
                    app:layout_constraintTop_toBottomOf="@id/image_card_dashboard_payment_management_add" />

                <!-- Return Payment Icon -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_card_dashboard_payment_management_return"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/shape_16sp_drawable"
                    android:src="@drawable/baseline_add_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_card_dashboard_payment_management_add"
                    app:layout_constraintTop_toBottomOf="@id/label_card_dashboard_payment_management" />

                <!-- Return Payment Label -->
                <TextView
                    android:id="@+id/label_dashboard_return_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Return Payment"
                    android:textColor="@color/primary_text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/image_card_dashboard_payment_management_return"
                    app:layout_constraintStart_toStartOf="@id/image_card_dashboard_payment_management_return"
                    app:layout_constraintTop_toBottomOf="@id/image_card_dashboard_payment_management_return" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_dashboard_agent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/container_dashboard_top">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/container_dashboard_agent_cylinder_stats"
            tools:layout_editor_absoluteX="0dp">

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_dashboard_agent_cylinder_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/shape_editext_border"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_dashboard_agent_cylinder_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Agent Summary"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_dashboard_agent_cylinder_distibuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="32dp"
                android:text="Distributed"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/label_dashboard_agent_cylinder_summary"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_agent_cylinder_summary" />

            <TextView
                android:id="@+id/label_dashboard_agent_cylinder_amount_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:text="Amount Pending"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/label_dashboard_agent_cylinder_distibuted"
                app:layout_constraintTop_toTopOf="@+id/label_dashboard_agent_cylinder_distibuted" />

            <TextView
                android:id="@+id/textView_dashboard_agent_distributed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="@+id/label_dashboard_agent_cylinder_distibuted"
                app:layout_constraintStart_toStartOf="@+id/label_dashboard_agent_cylinder_distibuted"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_agent_cylinder_distibuted" />

            <TextView
                android:id="@+id/textView_dashboard_agent_amount_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="@+id/label_dashboard_agent_cylinder_amount_pending"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="@+id/label_dashboard_agent_cylinder_amount_pending"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_agent_cylinder_amount_pending" />

            <TextView
                android:id="@+id/textView_dashboard_agent_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09 Jan 2025"
                android:textColor="@color/primary_text_color"
                app:layout_constraintEnd_toEndOf="@+id/label_dashboard_agent_cylinder_summary"
                app:layout_constraintStart_toStartOf="@+id/label_dashboard_agent_cylinder_summary"
                app:layout_constraintTop_toBottomOf="@+id/label_dashboard_agent_cylinder_summary" />
